# tests/scripts/cleanup-test-env.sh
#!/bin/bash

# Cleanup Test Environment Script

echo "ğŸ§¹ Cleaning up GoSocial API Test Environment..."

# Stop and remove containers
echo "ğŸ›‘ Stopping test containers..."
docker-compose -f docker-compose.test.yml down

# Remove volumes (optional)
read -p "ğŸ—‘ï¸ Do you want to remove test data volumes? (y/N): " -n 1 -r
echo
if [[ $REPLY =~ ^[Yy]$ ]]; then
    echo "ğŸ—‘ï¸ Removing test volumes..."
    docker-compose -f docker-compose.test.yml down -v
    docker volume prune -f
fi

# Clean test reports
echo "ğŸ“‹ Cleaning test reports..."
rm -rf tests/reports/*

# Clean temporary files
echo "ğŸ§½ Cleaning temporary files..."
find tests/ -name "*.tmp" -delete
find tests/ -name "*.log" -delete

echo "âœ… Test environment cleanup completed!"

